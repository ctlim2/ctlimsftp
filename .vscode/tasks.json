{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "npm run compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "npm run watch",
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "package",
            "type": "shell",
            "command": "vsce package",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "publish",
            "type": "shell",
            "command": "vsce publish",
            "group": "build",
            "problemMatcher": []
        }
    ]
}
